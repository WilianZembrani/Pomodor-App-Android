<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/configButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/gray"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        android:src="@drawable/config"
        tools:layout_editor_absoluteX="308dp"
        tools:layout_editor_absoluteY="159dp"
        tools:ignore="MissingConstraints" />

    <FrameLayout
        android:id="@+id/flTimer"
        android:layout_width="244dp"
        android:layout_height="272dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:indeterminate="false"

            android:progressDrawable="@drawable/gray_progressbar_background"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timerTextView"
                android:layout_width="322dp"
                android:layout_height="66dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/max_green"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Pause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="pause"
                android:textColor="@color/max_green"
                android:textSize="11sp" />

        </LinearLayout>

    </FrameLayout>

    <ImageButton
        android:id="@+id/restartButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="144dp"
        android:background="@color/gray"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        android:src="@drawable/restant"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flTimer" />
    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="144dp"
        android:background="@color/gray"
        android:scaleType="fitXY"
        android:importantForAccessibility="no"
        android:src="@drawable/play"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flTimer"/>




</androidx.constraintlayout.widget.ConstraintLayout>